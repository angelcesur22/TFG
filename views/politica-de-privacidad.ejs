    <style>
        /* Modo claro (por defecto) */
        .legal-container {
            max-width: 800px;
            width: 90%;
            margin: 2rem auto;
            padding: 2rem;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15), 0 10px 20px rgba(0, 0, 0, 0.1);
            transition: background 0.3s, color 0.3s;
        }
        
        h1, h2 {
            text-align: center;
            color: #333;
        }
        
        p {
            line-height: 1.6;
            color: #555;
            margin-bottom: 1rem;
        }
        
        ul {
            list-style-type: none;
            padding: 0;
        }
        
        li {
            margin-bottom: 0.5rem;
            color: #333;
        }
        
        a {
            color: #007bff;
            text-decoration: none;
        }
        
        a:hover {
            text-decoration: underline;
        }
        
        /* Botón de regreso */
        .btn-back {
            display: inline-block;
            margin-top: 1rem;
            background-color: #007bff;
            color: #fff;
            padding: 0.5rem 1rem;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        
        .btn-back:hover {
            background-color: #0056b3;
        }
        
        /* MODO OSCURO */
        :root[data-theme="dark"] .legal-container {
            background-color: #1e1e1e;
            color: #f0f0f0;
            border: 1px solid #444;
        }
        
        :root[data-theme="dark"] h1, 
        :root[data-theme="dark"] h2 {
            color: #f0f0f0;
        }
        
        :root[data-theme="dark"] p {
            color: #d1d1d1;
        }
        
        :root[data-theme="dark"] li {
            color: #d1d1d1;
        }
        
        :root[data-theme="dark"] a {
            color: #4a90e2;
        }
        
        :root[data-theme="dark"] .btn-back {
            background-color: #4a90e2;
        }
        
        :root[data-theme="dark"] .btn-back:hover {
            background-color: #357ABD;
        }
        /* Modal de búsqueda en Perfil - Estilos de Sneakers */
#modal-busqueda {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

#modal-busqueda .modal-contenido {
  background-color: #ffffff;
  padding: 20px;
  border-radius: 12px;
  max-width: 800px;
  width: 90%;
}

#resultados-busqueda {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
}

.card-producto {
  background-color: #fff;
  padding: 15px;
  border-radius: 12px;
  box-shadow: 0 0 10px rgba(0,0,0,0.08);
  transition: transform 0.2s ease;
  text-align: center;
}

.card-producto img {
  width: 100%;
  border-radius: 10px;
}

.card-producto h3 {
  font-size: 16px;
  margin: 10px 0 5px;
  color: #333;
}

.card-producto p.precio {
  font-weight: bold;
  color: #111;
}

/* Modo oscuro compatible */
:root[data-theme="dark"] #modal-busqueda .modal-contenido {
  background-color: #1e1e1e;
  color: #f0f0f0;
}

:root[data-theme="dark"] .card-producto {
  background-color: #2a2a2a;
  color: #f0f0f0;
  border: 1px solid #444;
}

:root[data-theme="dark"] .card-producto h3,
:root[data-theme="dark"] .card-producto p.precio {
  color: #f0f0f0;
}





@media (max-width: 600px) {
    .card-producto {
        margin-left: 59px;
        margin-right: 59px;
    }
}
