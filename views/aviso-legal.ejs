        /* Modal de búsqueda en Perfil - Estilos de Sneakers */
#modal-busqueda {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

#modal-busqueda .modal-contenido {
  background-color: #ffffff;
  padding: 20px;
  border-radius: 12px;
  max-width: 800px;
  width: 90%;
}

#resultados-busqueda {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
}

.card-producto {
  background-color: #fff;
  padding: 15px;
  border-radius: 12px;
  box-shadow: 0 0 10px rgba(0,0,0,0.08);
  transition: transform 0.2s ease;
  text-align: center;
}

.card-producto img {
  width: 100%;
  border-radius: 10px;
}

.card-producto h3 {
  font-size: 16px;
  margin: 10px 0 5px;
  color: #333;
}

.card-producto p.precio {
  font-weight: bold;
  color: #111;
}

/* Modo oscuro compatible */
:root[data-theme="dark"] #modal-busqueda .modal-contenido {
  background-color: #1e1e1e;
  color: #f0f0f0;
}

:root[data-theme="dark"] .card-producto {
  background-color: #2a2a2a;
  color: #f0f0f0;
  border: 1px solid #444;
}

:root[data-theme="dark"] .card-producto h3,
:root[data-theme="dark"] .card-producto p.precio {
  color: #f0f0f0;
}





@media (max-width: 600px) {
