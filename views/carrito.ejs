<%- include('partials/header') %>
<head>
  <title>FootLaces - Carrito</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/carrito.css">
  <link rel="stylesheet" href="/stylesheets/header.css">

</head>
<main>
  <h1 class="traduccion" data-es="Tu carrito" data-en="Your Cart">Tu carrito</h1>
  <div class="carrito-container">
    <% if (mensaje) { %>
  <div class="mensaje-flash traduccion" data-es="<%= mensaje %>" data-en="<%= mensaje %>">
    <%= mensaje %>
  </div>
<% } %>
    
    <% if (carrito.length === 0) { %>
      <p class="traduccion" data-es="Tu carrito está vacío" data-en="Your cart is empty">Tu carrito está vacío</p>
    <% } else { %>
      <% carrito.forEach(item => { %>
        <div class="item-carrito">
          <img src="<%= item.producto.imagen %>" alt="<%= item.producto.nombre %>">
          <div class="info">
            <h3 class="traduccion" data-es="<%= item.producto.nombre %>" data-en="<%= item.producto.nombre %>">
              <%= item.producto.nombre %>
            </h3>
            <p class="traduccion" data-es="Marca: <%= item.producto.marca %>" data-en="Brand: <%= item.producto.marca %>">Marca: <%= item.producto.marca %></p>
            <p class="traduccion" data-es="Talla: <%= item.talla %>" data-en="Size: <%= item.talla %>">Talla: <%= item.talla %></p>
            <p class="traduccion" data-es="Precio: <%= item.producto.precio %>€" data-en="Price: <%= item.producto.precio %>€">
              Precio: <%= item.producto.precio %>€
            </p>
            <p class="traduccion" data-es="Cantidad: <%= item.cantidad %>" data-en="Quantity: <%= item.cantidad %>">Cantidad: <%= item.cantidad %></p>
          </div>
          <div class="acciones">
            <form action="/carrito/eliminar/<%= item._id %>" method="POST">
              <button type="submit" class="btn-eliminar traduccion" data-es="Eliminar" data-en="Delete">Eliminar</button>
            </form>
          </div>
        </div>
      <% }) %>

      <div class="carrito-total">
        <h3 class="traduccion" data-es="Total: <%= total.toFixed(2) %>€" data-en="Total: <%= total.toFixed(2) %>€">
          Total: <%= total.toFixed(2) %>€
        </h3>
        <a href="/pagar" class="btn-pagar traduccion" data-es="Pagar ahora" data-en="Pay Now">Pagar ahora</a>
      </div>
    <% } %>
  </div>
</main>
<%- include('partials/footer') %>